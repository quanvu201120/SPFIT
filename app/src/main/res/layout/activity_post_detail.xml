<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PostDetailActivity"
    android:background="@color/white"
    android:padding="@dimen/size5dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/size20dp"
        app:layout_constraintBottom_toTopOf="@+id/jalksjdfljaslkdj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_post_detail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_cloud_download_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="@dimen/size20dp"
                android:layout_marginBottom="@dimen/size20dp"
                android:background="#E8E8E8" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_dateCreate_post_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size5dp"
                    android:text="16/09/2022 21:20:30"
                    android:textColor="@color/black50"
                    android:textSize="@dimen/size15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_follow_post_detail"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian:"
                    android:textColor="@color/black50"
                    android:textSize="@dimen/size15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_follow_post_detail"
                    android:paddingLeft="@dimen/size10dp"
                    android:paddingRight="@dimen/size10dp"
                    android:background="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size20dp"
                    android:text="Theo dõi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5dp">

                <TextView
                    android:id="@+id/tv_nameUser_post_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size5dp"
                    android:text="Nguyễn Văn A "
                    android:textColor="@color/black50"
                    android:textSize="@dimen/size15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Người tạo:"
                    android:textColor="@color/black50"
                    android:textSize="@dimen/size15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5dp">

                <TextView
                    android:id="@+id/tv_category_post_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size5dp"
                    android:text="Tài liệu học tập"
                    android:textColor="@color/black50"
                    android:textSize="@dimen/size15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView0000003"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView0000003"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danh mục:"
                    android:textColor="@color/black50"
                    android:textSize="@dimen/size15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5dp">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_disable_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/icon_comments_disabled_"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    app:layout_constraintEnd_toStartOf="@id/img_disable_comment"
                    android:id="@+id/tv_complete_post_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size5dp"
                    android:text="abc hoàn thành"
                    android:textColor="@color/black50"
                    android:textSize="@dimen/size15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView333"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/textView333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái:"
                    android:textColor="@color/black50"
                    android:textSize="@dimen/size15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="2dp"-->
<!--                android:layout_marginTop="@dimen/size20dp"-->
<!--                android:layout_marginBottom="@dimen/size5dp"-->
<!--                android:background="#E8E8E8" />-->

            <TextView
                android:layout_marginTop="@dimen/size15dp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/size15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@color/red"
                android:textColor="#FFFFFF"
                android:text="Tiêu đề"/>

            <TextView

                android:id="@+id/tv_title_post_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title title title title title title title title title title title title title title title title title "
                android:textColor="@color/black"
                android:textSize="@dimen/size18sp"
                android:textStyle="bold" />

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="2dp"-->
<!--                android:layout_marginTop="@dimen/size20dp"-->
<!--                android:layout_marginBottom="@dimen/size5dp"-->
<!--                android:background="#E8E8E8" />-->

            <TextView
                android:gravity="center"
                android:layout_marginTop="@dimen/size15dp"
                android:layout_marginBottom="@dimen/size15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@color/red"
                android:textColor="#FFFFFF"
                android:text="Nội dung"/>

            <TextView
                android:id="@+id/tv_description_post_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" description \n description \n description \n description \n description \n description \n description \n description \n "
                android:textColor="@color/black50"
                android:textSize="@dimen/size18sp" />

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="2dp"-->
<!--                android:layout_marginTop="@dimen/size20dp"-->
<!--                android:layout_marginBottom="@dimen/size5dp"-->
<!--                android:background="#E8E8E8" />-->

            <TextView
                android:gravity="center"
                android:layout_marginTop="@dimen/size15dp"
                android:layout_marginBottom="@dimen/size15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@color/red"
                android:textColor="#FFFFFF"
                android:text="Danh sách bình luận"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleViewCmt_post_detail"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_no_item_post_detail"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size18sp"
                android:textColor="@color/black50"
                android:text="Không có bình luận"/>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/jalksjdfljaslkdj"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E8E8E8"
        app:layout_constraintBottom_toTopOf="@+id/layout_comment_post_detail"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_comment_post_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="5dp"
        >

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgDeleteImageCmt_post_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintStart_toEndOf="@id/imgImageCmt_post_detail"
            app:layout_constraintTop_toTopOf="@id/imgImageCmt_post_detail" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgImageCmt_post_detail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_add"
            app:layout_constraintBottom_toTopOf="@id/edt_cmt_post_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            app:layout_constraintTop_toTopOf="@id/edt_cmt_post_detail"
            android:id="@+id/img_camera_post_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            app:layout_constraintTop_toTopOf="@id/edt_cmt_post_detail"
            android:id="@+id/img_send_post_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/edt_cmt_post_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="@dimen/size5dp"
            android:backgroundTint="@color/gray2"
            android:ems="10"
            android:hint="Nhập bình luận..."
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:textColor="@color/black"
            android:textColorHint="@color/gray2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_send_post_detail"
            app:layout_constraintStart_toEndOf="@id/img_camera_post_detail"
            tools:ignore="TouchTargetSizeCheck" />

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBarCmt"
            android:indeterminateDrawable="@drawable/progressbar_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/size40dp"
            android:layout_height="@dimen/size40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>