<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UpdatePostActivity">

    <ImageView
        android:id="@+id/img_update_post"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_baseline_cloud_download_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_title_update_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_register_radius"
        android:hint="Tiêu đề"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:minHeight="48dp"
        android:padding="@dimen/size10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_update_post" />

    <EditText
        android:id="@+id/edt_description_update_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_register_radius"
        android:gravity="top"
        android:hint="Nội dung"
        android:inputType="textMultiLine"
        android:lines="10"
        android:padding="@dimen/size10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_title_update_post" />

    <Button
        android:id="@+id/btn_submit_update_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/red"
        android:paddingLeft="@dimen/size20dp"
        android:paddingRight="@dimen/size20dp"
        android:text="Cập nhật"
        android:textColor="@color/white"
        android:textSize="@dimen/size14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cancel_update_post"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel_update_post"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_cancel_update_post" />

    <Button
        android:id="@+id/btn_cancel_update_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/red"
        android:paddingLeft="@dimen/size20dp"
        android:paddingRight="@dimen/size20dp"
        android:text="Quay lại"
        android:textColor="@color/white"
        android:textSize="@dimen/size14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_submit_update_post"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_blockCmt_update" />

    <ProgressBar
        android:id="@+id/progressBar_update_post"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:indeterminateDrawable="@drawable/progressbar_loading"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btn_submit_update_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_submit_update_post" />

    <CheckBox

        android:id="@+id/checkbox_complete_update"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Hoàn thành"
        android:textColor="@color/black"
        android:textSize="@dimen/size18sp"
        app:layout_constraintBottom_toBottomOf="@+id/checkbox_blockCmt_update"
        app:layout_constraintEnd_toStartOf="@+id/checkbox_blockCmt_update"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkbox_blockCmt_update" />

    <CheckBox

        android:id="@+id/checkbox_blockCmt_update"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:text="Khóa bình luận"
        android:textColor="@color/black"
        android:textSize="@dimen/size18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/checkbox_complete_update"
        app:layout_constraintTop_toBottomOf="@+id/spinner_update" />

    <Spinner
        android:background="@color/white"
        android:id="@+id/spinner_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/edt_description_update_post" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Chọn danh mục: "
        android:textColor="@color/black"
        android:textSize="@dimen/size16sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner_update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner_update" />


</androidx.constraintlayout.widget.ConstraintLayout>