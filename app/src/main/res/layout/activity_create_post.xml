<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.CreatePostActivity">

    <ImageView
        android:id="@+id/img_create_post"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_title_create_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_register_radius"
        android:hint="Tiêu đề"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:minHeight="48dp"
        android:padding="@dimen/size10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black50"
        android:textSize="@dimen/size18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_create_post" />

    <EditText
        android:id="@+id/edt_description_create_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_register_radius"
        android:gravity="top"
        android:hint="Nội dung"
        android:inputType="textMultiLine"
        android:lines="10"
        android:padding="@dimen/size10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_title_create_post" />

    <Button
        android:id="@+id/btn_submit_create_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/red"
        android:paddingLeft="@dimen/size20dp"
        android:paddingRight="@dimen/size20dp"
        android:text="Tạo mới"
        android:textColor="@color/white"
        android:textSize="@dimen/size14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cancel_create_post"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel_create_post"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_cancel_create_post" />

    <Button
        android:id="@+id/btn_cancel_create_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/red"
        android:paddingLeft="@dimen/size20dp"
        android:paddingRight="@dimen/size20dp"
        android:text="Quay lại"
        android:textColor="@color/white"
        android:textSize="@dimen/size14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_submit_create_post"
        app:layout_constraintTop_toBottomOf="@id/spinner_create" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar_create_post"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/progressbar_loading"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cancel_create_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_cancel_create_post" />

    <Spinner
        android:id="@+id/spinner_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/edt_description_create_post" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Chọn danh mục: "
        android:textColor="@color/black"
        android:textSize="@dimen/size16sp"
        app:layout_constraintBottom_toBottomOf="@id/spinner_create"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/spinner_create" />

</androidx.constraintlayout.widget.ConstraintLayout>